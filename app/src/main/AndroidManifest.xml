<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.myadridev.remembrall"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.myadridev.remembrall.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.myadridev.remembrall.activities.SettingsActivity"
            android:label="@string/title_settings"
            android:parentActivityName="com.myadridev.remembrall.activities.MainActivity"/>
        <activity
            android:name="com.myadridev.remembrall.activities.AboutActivity"
            android:label="@string/title_about"
            android:parentActivityName="com.myadridev.remembrall.activities.MainActivity"/>
        <activity
            android:name="com.myadridev.remembrall.activities.GroupsActivity"
            android:label="@string/title_groups"
            android:parentActivityName="com.myadridev.remembrall.activities.MainActivity"/>
        <activity
            android:name="com.myadridev.remembrall.activities.GroupDetailActivity"
            android:label="@string/title_group_detail"
            android:parentActivityName="com.myadridev.remembrall.activities.GroupsActivity"/>
        <activity
            android:name="com.myadridev.remembrall.activities.ReminderDetailActivity"
            android:label="@string/title_reminder_detail"
            android:parentActivityName="com.myadridev.remembrall.activities.GroupDetailActivity"/>

        <service
            android:name="com.myadridev.remembrall.services.AutoStartService"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE"
            android:enabled="true"/>

        <service
            android:name="com.myadridev.remembrall.services.ReminderJobService"
            android:permission="android.permission.BIND_JOB_SERVICE">
        </service>

        <receiver
            android:name="com.myadridev.remembrall.services.BootReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
</manifest>
