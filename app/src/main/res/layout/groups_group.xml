<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:padding="6dip"
        android:background="@color/GroupBackGround">

    <ImageView
        android:id="@+id/groups_group_star"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/btn_star_big_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/groups_group_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groupe"
            android:textSize="22sp"
            android:layout_toRightOf="@id/groups_group_star"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/GroupForeground"/>

    <ImageView
        android:id="@+id/groups_group_delete"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/groups_group_detail"
            android:layout_toLeftOf="@id/groups_group_delete"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>
